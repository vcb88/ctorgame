{
  "name": "ctor-game-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only --debug --trace-warnings --ignore-watch node_modules --clear --esm ./src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "eslint -c eslint.config.cjs . --max-warnings 0",
    "lint:fix": "eslint -c eslint.config.cjs . --fix",
    "type-check": "tsc -p tsconfig.build.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@ctor-game/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "mongodb": "^6.3.0",
    "reflect-metadata": "^0.2.1",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.17.12",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.4.0"
  }
}