{
  "extends": "./tsconfig.json",
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "esm": true,
    "experimentalSpecifiers": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}